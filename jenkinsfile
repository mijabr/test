pipeline {
    agent any 
	environment {
		dockerImage = ''
	}
	stages {
        stage('Build') { 
            steps {
                echo "Build #${env.BUILD_ID}"
				script {
				    dockerImage = docker.build("mijabr/testapp:arm", "-f Dockerfile .")
				}
            }
        }
        stage('Test') { 
            steps {
                echo "testing"
            }
        }
        stage('Deploy') { 
            steps {
                echo "Deploying stack"
				/* script {
				    sh "docker stack deploy --compose-file cmp-prod.yml mijabr"
				}*/
            }
        }
    }
}
